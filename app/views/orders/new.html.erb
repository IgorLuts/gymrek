<div class="col-md-8 col-md-offset-2">
  <div class="box" id="checkout">
    <h1>Checkout</h1>
    <%= form_for(@order, :html => { :role => 'form'}) do |f| %>
        <% if @order.errors.any? %>
          <div id="error">
            <% @order.errors.full_messages.each do |msg| %>
                <div class="alert alert-info alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <strong><%= msg %></strong>
              </div>
            <% end %>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.label :firstname, "First name" %><br>
          <%= f.text_field :firstname, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :lastname, "Last name" %><br>
          <%= f.text_field :lastname, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :email, "Email" %><br>
          <%= f.text_field :email, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :phone, "Phone number" %><br>
          <%= f.text_field :phone, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :adress, "Delivery adress" %><br>
          <%= f.text_area :adress, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :post_code, "Post code" %><br>
          <%= f.text_area :post_code, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :comment, "Comment" %><br>
          <%= f.text_area :comment, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.submit 'Confirm order', :class => 'btn btn-primary pull-right'%>

          <script
            src="https://checkout.stripe.com/checkout.js" class="stripe-button"
            data-key=<%= ENV.fetch('STRIPE_PUBLIC_KEY') %>
            data-amount=<%= @order.total_price * 100 %>
            data-name="Gymrek.com"
            data-image="https://stripe.com/img/documentation/checkout/marketplace.png"
            data-locale="auto"
            data-zip-code="true"
            data-allow-remember-me="false"
            data-currency="eur">
          </script>

          <%= link_to root_path, class: "btn btn-default pull-left" do %>
              <i class="fa fa-chevron-left"></i> Continue shopping
          <% end %>
        </div>
      <% end %>
  </div>
</div>
