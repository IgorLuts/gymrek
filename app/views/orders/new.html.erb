<div class="col-md-8 col-md-offset-2">
  <div class="box" id="checkout">
    <h1><%= t("checkout") %></h1>
    <%= form_for(@order, :html => { :role => 'form'}) do |f| %>
        <% if @order.errors.any? %>
          <div id="error">
            <% @order.errors.full_messages.each do |msg| %>
                <div class="alert alert-info alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <strong><%= msg %></strong>
              </div>
            <% end %>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.label :firstname, t("first_name") %><br>
          <%= f.text_field :firstname, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :lastname, t("last_name") %><br>
          <%= f.text_field :lastname, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :email, t("email") %><br>
          <%= f.text_field :email, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :phone, t("phone_number") %><br>
          <%= f.text_field :phone, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :adress, t("delivery_adress") %><br>
          <%= f.text_area :adress, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :post_code, t("post_code") %><br>
          <%= f.text_area :post_code, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :comment, t("comment") %><br>
          <%= f.text_area :comment, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.submit t('confirm_order'), :class => 'btn btn-primary pull-right'%>

          <!-- <script
            src="https://checkout.stripe.com/checkout.js" class="stripe-button"
            data-key=<%= ENV.fetch('STRIPE_PUBLIC_KEY') %>
            data-amount=<%= @order.total_price * 100 %>
            data-name="Gymrek.com"
            data-image="https://stripe.com/img/documentation/checkout/marketplace.png"
            data-locale="auto"
            data-zip-code="true"
            data-allow-remember-me="false"
            data-currency="eur">
          </script> -->

          <%= link_to root_path, class: "btn btn-default pull-left" do %>
              <i class="fa fa-chevron-left"></i><%= t("continue_shopping") %>
          <% end %>
        </div>
      <% end %>
  </div>
</div>
