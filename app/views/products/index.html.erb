<% content_for :breadcrumbs do %>
  <div id="heading-breadcrumbs" class="col-md-12">
    <div class="container">
        <div class="row">
          <ul class="breadcrumb">
            <li><%= link_to "Home", root_path %></li>
             <li>Catalog</li>
          </ul>
        </div>
    </div>
  </div>
<% end %>

<div class="col-md-3">
  <%= yield(:user_menu) %>
  <%= render 'layouts/sidebar' %>
</div>

<div class="col-md-9">
  <div class="box">
    <% if params[:q] %>
      <h1>Search results</h1>
      <% if @products.empty? %>
        <h3>The search has not given any results</h3>
      <% end %>
    <% else %>
      <h1>Catalog</h1>
    <% end %>
  </div>

  <div class="row products">
      <%= render "products/product", products: @products %>
  </div>
  <div class="row">
    <%= paginate @products %>
  </div>
</div>
