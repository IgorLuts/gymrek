<% content_for :breadcrumbs do %>
  <div id="heading-breadcrumbs" class="col-md-12">
    <div class="container">
        <div class="row">
          <ul class="breadcrumb">
            <li><%= link_to t('home'), root_path %></li>
             <li><%= t('catalog') %></li>
          </ul>
        </div>
    </div>
  </div>
<% end %>

<div class="col-md-3">
  <%= yield(:user_menu) %>
  <%= render 'layouts/sidebar' %>
</div>

<div class="col-md-9">
  <div class="box">
    <% if params[:q] %>
      <h1><%= t('search_results') %></h1>
      <% if @products.empty? %>
        <h3><%= t('the_search_has_not_given_any_results') %></h3>
      <% end %>
    <% else %>
      <h1><%= t('catalog') %></h1>
    <% end %>
  </div>

  <div class="row products">
      <%= render "products/product", products: @products %>
  </div>
  <div class="row">
    <%= paginate @products %>
  </div>
</div>
