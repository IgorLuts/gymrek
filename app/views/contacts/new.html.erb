<% content_for :breadcrumbs do %>
  <div id="heading-breadcrumbs" class="col-md-12">
    <div class="container">
        <div class="row">
          <div class="col-md-7">
            <h1></h1>
          </div>
          <div class="col-md-5">
            <ul class="breadcrumb">
              <li><%= link_to t('home'), root_path %></li>
               <li><%= link_to t('contact') %></li>
            </ul>
          </div>
        </div>
    </div>
  </div>
<% end %>

<div class="col-md-8 col-md-offset-2">
 <div class="box" id="contact">
    <h2><%= t('phone_number') %></h2>
    <p><%= t('you_can_consult_with_managers_or_order_goods_by_number') %>:</p>
    <ul>
      <li>+32 492 34 37 51</li>
    </ul>
    <h2><%= t('write_to_us') %></h2>
      <%= form_for(@contact, :html => { :role => 'form'}) do |f| %>
        <% if @contact.errors.any? %>
          <div id="error">
            <% @contact.errors.full_messages.each do |msg| %>
                <div class="alert alert-info alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <strong><%= msg %></strong>
              </div>
            <% end %>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.label t('contact_form_name') %><br>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label t("contact_form_email") %><br>
          <%= f.text_field :email, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label t("contact_form_your_question") %><br>
          <%= f.text_area :content, class: 'form-control' %>
        </div>
        <button type="submit" class="btn btn-primary">
          <i class="fa fa-envelope-o"></i> <%= t("contact_form_send") %>
        </button>
      <% end %>
  </div>
</div>
