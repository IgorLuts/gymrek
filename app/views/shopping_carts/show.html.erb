<div id="basket">
  <div class="box">
      <h1>Cart</h1>
      <div class="table-responsive">
          <table class="table">
              <thead>
                  <tr>
                      <th colspan="2"><% t("product") %></th>
                      <th><% t("quantity") %></th>
                      <th><% t("price") %></th>
                      <th colspan="2"><% t("total") %></th>
                  </tr>
              </thead>
              <tbody>
                <% @shopping_cart.shopping_cart_items.each do |shopping_cart_item| %>
                  <tr>
                      <td>
                          <%= link_to product_path(shopping_cart_item.item) do %>
                              <%= image_tag shopping_cart_item.item.image_url(:preview), class:"img-responsive" %>
                          <% end %>
                      </td>
                      <td>
                        <%= link_to shopping_cart_item.item.title, product_path(shopping_cart_item.item) %>
                      </td>
                      <td>
                          <input type="number" value="<%= shopping_cart_item.quantity %>" class="form-control">
                      </td>
                      <td>
                        <%= shopping_cart_item.item.price %>
                      </td>
                      <td>
                        <%= shopping_cart_item.subtotal %></td>
                      <td>
                        <%= link_to shopping_cart_items_path(:product_id => shopping_cart_item.item.id), method: :delete do %>
                          <i class="fa fa-trash-o"></i>
                        <% end %>
                      </td>
                  </tr>
                <% end %>
              </tbody>
              <tfoot>
                  <tr>
                      <th colspan="5"><% t("total") %>:</th>
                      <th colspan="2">EUR <%= @shopping_cart.total %></th>
                  </tr>
              </tfoot>
          </table>
      </div>

      <div class="box-footer">
          <div class="pull-left">
             <%= link_to :back, class: "btn btn-default" do %>
              <i class="fa fa-chevron-left"></i> <% t("continue_shopping") %>
             <% end %>
          </div>
          <div class="pull-right">
            <%= link_to t('clear_cart'), @shopping_cart, method: :delete, class: "btn btn-default"%>
             <%= link_to new_order_path, class: "btn btn-primary" do %>
             <%= t("confirm_order") %> <i class="fa fa-chevron-right"></i>
             <% end %>
          </div>
      </div>
  </div>
</div>
